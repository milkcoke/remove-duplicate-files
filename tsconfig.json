{
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
